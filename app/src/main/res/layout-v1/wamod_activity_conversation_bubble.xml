<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.pkmmte.view.CircularImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/profile_picture"
        android:layout_marginLeft="5dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/wamod_style_bubble_newhangouts_balloon_incoming_normal"
        android:backgroundTint="#000000"
        android:padding="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/bubble"
        android:layout_toRightOf="@id/profile_picture">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/sender_identity">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sender_name"
                    android:text="Sender"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/push_name"
                    android:text="Push name"
                    android:textColor="#bfbfbf"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_text"
                android:text="Message text"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7.5sp"
                android:textColor="#c0c0c0"
                android:layout_marginTop="4dp"
                android:text="Debug info"
                android:id="@+id/debug_info"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>