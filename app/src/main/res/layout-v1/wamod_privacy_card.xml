<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:background="@drawable/list_separator_bot"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/info_screen_card_spacing" />
    <LinearLayout
        android:id="@+id/wamod_privacy_card"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_orange_gradient"
            android:paddingLeft="@dimen/info_screen_padding"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/info_screen_row"
            android:id="@+id/wamod_privacy_card_customprivacy"
            android:clickable="true">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wamod_privacy_card_customprivacy_title"
                    style="@style/ListItemTitle"
                    android:id="@+id/wamod_privacy_card_customprivacy_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wamod_privacy_card_customprivacy_summary"
                    android:textSize="14.0sp"
                    android:textColor="@color/list_item_info"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:visibility="gone"/>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/wamod_privacy_card_customprivacy_switch"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@drawable/list_separator_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/info_screen_card_spacing" />
</LinearLayout>