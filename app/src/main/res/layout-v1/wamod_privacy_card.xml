<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:background="@drawable/list_separator_bot"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/info_screen_card_spacing" />
    <LinearLayout
        android:id="@+id/wamod_privacy_card"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_orange_gradient"
            android:paddingLeft="@dimen/info_screen_padding"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/info_screen_row">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report received messages"
                    style="@style/ListItemTitle"
                    android:id="@+id/wamod_privacy_card_reportreceived_title"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ListItemSubtitleSmall"
                    android:id="@+id/wamod_privacy_card_reportreceived_summary"/>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wamod_privacy_card_reportreceived_switch"/>
        </LinearLayout>
        <View
            style="@style/FlatCardSeparator" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_orange_gradient"
            android:paddingLeft="@dimen/info_screen_padding"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/info_screen_row">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report read messages"
                    style="@style/ListItemTitle"
                    android:id="@+id/wamod_privacy_card_reportread_title" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ListItemSubtitleSmall"
                    android:id="@+id/wamod_privacy_card_reportread_summary" />
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wamod_privacy_card_reportread_switch"/>
        </LinearLayout>
        <View
            style="@style/FlatCardSeparator" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_orange_gradient"
            android:paddingLeft="@dimen/info_screen_padding"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/info_screen_row">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report when I'm typing"
                    style="@style/ListItemTitle"
                    android:id="@+id/wamod_privacy_card_hidetyping_title" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ListItemSubtitleSmall"
                    android:id="@+id/wamod_privacy_card_hidetyping_summary" />
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wamod_privacy_card_hidetyping_switch"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@drawable/list_separator_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/info_screen_card_spacing" />
</LinearLayout>