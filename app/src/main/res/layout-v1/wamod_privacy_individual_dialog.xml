<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/wamod_privacy"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_orange_gradient"
            android:paddingLeft="@dimen/info_screen_padding"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/info_screen_row"
            android:id="@+id/wamod_privacy_card_reportreceived"
            android:clickable="true">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wamod_privacy_card_reportreceived_title"
                    style="@style/ListItemTitle"
                    android:id="@+id/wamod_privacy_card_reportreceived_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wamod_privacy_card_reportreceived_summary"
                    android:text="@string/wamod_privacy_card_reportreceived_summary_experimental"
                    android:textSize="14.0sp"
                    android:textColor="@color/list_item_info"
                    android:gravity="left"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wamod_privacy_card_reportreceived_switch"/>
        </LinearLayout>
        <View
            style="@style/FlatCardSeparator" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_orange_gradient"
            android:paddingLeft="@dimen/info_screen_padding"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/info_screen_row"
            android:id="@+id/wamod_privacy_card_reportread"
            android:clickable="true">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wamod_privacy_card_reportread_title"
                    style="@style/ListItemTitle"
                    android:id="@+id/wamod_privacy_card_reportread_title" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wamod_privacy_card_reportread_summary"
                    android:text="@string/wamod_privacy_card_reportread_summary"
                    android:textSize="14.0sp"
                    android:textColor="@color/list_item_info"
                    android:gravity="left"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wamod_privacy_card_reportread_switch"/>
        </LinearLayout>
        <View
            style="@style/FlatCardSeparator" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_orange_gradient"
            android:paddingLeft="@dimen/info_screen_padding"
            android:paddingRight="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/info_screen_row"
            android:id="@+id/wamod_privacy_card_hidetyping"
            android:clickable="true">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wamod_privacy_card_reporttyping_title"
                    style="@style/ListItemTitle"
                    android:id="@+id/wamod_privacy_card_hidetyping_title" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wamod_privacy_card_hidetyping_summary"
                    android:text="@string/wamod_privacy_card_reporttyping_summary"
                    android:textSize="14.0sp"
                    android:textColor="@color/list_item_info"
                    android:gravity="left"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wamod_privacy_card_hidetyping_switch"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>