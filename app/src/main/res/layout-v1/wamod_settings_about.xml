<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_launcher_background">

    <!--<ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.4"
        android:scaleType="center"
        android:src="@drawable/brian2" />-->

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:paddingStart="32.0dip"
        android:paddingTop="40.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WAMOD"
                android:textColor="#ffffffff"
                android:textSize="56.0sp"
                android:textStyle="bold"
                android:shadowColor="#a0000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"/>

            <wamod.widget.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/ic_launcher_round"
                android:elevation="8dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="Version"
            android:textColor="#ffffff"
            android:textSize="20.0sp"
            android:shadowColor="#a0000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="8"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.0 Alpha 15"
            android:textColor="#a0ffffff"
            android:textSize="14.0sp"
            android:shadowColor="#a0000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="WhatsApp"
            android:textColor="#ffffff"
            android:textSize="20.0sp"
            android:shadowColor="#a0000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="8"/>

        <TextView
            android:id="@+id/wa_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.17.442"
            android:textColor="#a0ffffff"
            android:textSize="14.0sp"
            android:shadowColor="#a0000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="@string/whatsapp_copyright"
            android:textColor="#a0ffffff"
            android:textSize="14.0sp"
            android:shadowColor="#a0000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:padding="12dp"
            android:translationX="-12dp"
            android:text="@string/view_licenses"
            android:textColor="#a0ffffff"
            android:textSize="14.0sp"
            android:shadowColor="#a0000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:id="@+id/licenses"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="24.0dip"
        android:id="@+id/made_by"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <wamod.widget.CircleImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/brian2"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:elevation="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made by"
                android:textColor="#a0ffffff"
                android:textSize="16.0sp"
                android:shadowColor="#a0000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brian Valente"
                android:textColor="#fffafafa"
                android:textSize="18.0sp"
                android:shadowColor="#a0000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>